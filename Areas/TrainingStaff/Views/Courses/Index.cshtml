@model IEnumerable<StaffManager.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/TrainingStaff/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    <div class="ms-md-auto pe-md-3 d-flex align-items-center col-md-3">
        <div class="input-group input-group-outline">
            <label class="form-label">Search</label>
            @Html.TextBox("Search", null, new
            {
                @type = "text",
                @class = "form-control"

       })
            <input type="submit" value="Searh">
        </div>
    </div>
}
@{ 
    string subString(string content)
    {
        if (content.Length <= 50) return content;
        return content.Substring(0, 50)+" ...";
    }
}


<p>
    @Html.ActionLink("Create New", "Create", null, new
{
    @class = "btn btn-primary"
})

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdate)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.CourseCategory.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @subString(item.Description)
        
            </td>
            <td>
                <img src="@item.Picture" height="100"/>
             
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdate)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.CourseCategory.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
